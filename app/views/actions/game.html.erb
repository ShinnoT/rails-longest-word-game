<h1>Actions#game</h1>
<p>Find me in app/views/actions/game.html.erb</p>


<h2>Here is your grid: <%= @grid %></h2>

<h2>What's your best shot?</h2>
<% @start_time %>
<form action="/score" method="get">
  <input type="text" name="guess" placeholder="What's your guess?">
  <input type="hidden" name="start_time" value="<%= @start_time %>">
  <input type="hidden" name="grid" value="<%= @grid %>">
  <input type="submit">
</form>
<% @end_time %>
